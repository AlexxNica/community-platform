<!doctype html>
<head>
    <link rel="stylesheet" href="/static/css/index.css">
</head>
<body>
    <div id="userpage-wrap">
        <div class="left userpage-wrap__child" id="userpage-keywords">
            <div id="userpage-keywords-title">Keywords</div>
            
            <ul id="userpage-keywords-list">
                : if $data.topics {
                    : for $data.topics.keys() -> $topic {
                        <li class="userpage-keywords-list__item">
                            <div class="left topic_name">
                                : $topic
                            </div>
                            <div class="right topic_count">
                                : $data.topics[$topic]
                            </div>
                            <span class="clear"></span>
                        </li>
                    : }
                : }
            </ul>
        </div>

        <div class="left userpage-wrap__child" id="userpage-main">
            <h2 id="userpage-main-maintained-title">Maintained Instant Answers</h2>

            <ul id="userpage-main-maintained-ias">
                : if $data.maintained {
                    : for $data.maintained -> $m_ia {
                        <li class="userpage-main-maintained-ias__item">
                            <a href="https://duck.co/ia/view/<:$m_ia.id:>">
                                : $m_ia.name
                            </a>
                        </li>
                    : }
                : }
            </ul>
            
            <h2 id="userpage-main-title">Contributed Instant Answers</h2>

            <ul id="userpage-main-ias">
                : if $data.ia && $data.ia.live {
                    : for $data.ia.live -> $ia {
                        <li class="userpage-main-ias__item">
                            <a href="https://duck.co/ia/view/<:$ia.id:>">
                                : $ia.name
                            </a>
                        </li>
                    : }
                : }
            </ul>
            
            <h2 id="userpage-main-issues-title">Pull Requests</h2>

            <ul id="userpage-main-issues">
                : if $data.pulls {
                    : for $data.pulls -> $pull {
                        <li class="userpage-main-pulls__item">
                            <div class="left pull_title">
                                <a href="https://github.com/<:$pull.github_repo.full_name:>/pull/<:$pull.number:>">
                                    : $pull.title
                                </a>
                            </div>
                            <div class="right pull_ia">
                                <a href="/ia/view/<:$pull.ia_id:>">
                                    : $pull.ia_name
                                </a>
                            </div>
                            <div class="clear"></div>
                        </li>
                    : }
                 : }
            </ul>
            
            <h2 id="userpage-main-issues-title">Issues</h2>

            <ul id="userpage-main-issues">
                : if $data.issues {
                    : for $data.issues -> $issue {
                        <li class="userpage-main-issues__item">
                            <div class="left issue_title">
                                <a href="https://github.com/<:$issue.github_repo.full_name:>/issues/<:$issue.number:>">
                                    : $issue.title
                                </a>
                            </div>
                            <div class="right issue_ia">
                                <a href="/ia/view/<:$issue.ia_id:>">
                                    : $issue.ia_name
                                </a>
                            </div>
                            <div class="clear"></div>
                        </li>
                    : }
                 : }
            </ul>
        </div>
        <span class="clear"></span>
    </div>
</body>
</html>
